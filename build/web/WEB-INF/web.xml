<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Players</servlet-name>
        <servlet-class>Characters.Players</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddPlayer</servlet-name>
        <servlet-class>Characters.AddPlayer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeletePlayer</servlet-name>
        <servlet-class>Characters.DeletePlayer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadPlayer</servlet-name>
        <servlet-class>Characters.LoadPlayer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdatePlayerList</servlet-name>
        <servlet-class>Characters.UpdatePlayerList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>getPlayers</servlet-name>
        <servlet-class>Characters.getPlayers</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Players</servlet-name>
        <url-pattern>/Players</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddPlayer</servlet-name>
        <url-pattern>/AddPlayer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeletePlayer</servlet-name>
        <url-pattern>/DeletePlayer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadPlayer</servlet-name>
        <url-pattern>/LoadPlayer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdatePlayerList</servlet-name>
        <url-pattern>/UpdatePlayerList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>getPlayers</servlet-name>
        <url-pattern>/getPlayers</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
